{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",  
    "outDir": "dist",                              
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,            
    "types": ["reflect-metadata"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
